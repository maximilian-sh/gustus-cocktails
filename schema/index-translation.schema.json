{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["id", "name", "description"],
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9]+$",
            "description": "Identifier for the index"
        },
        "name": {
            "type": "string",
            "description": "Display name for the index"
        },
        "description": {
            "type": "string",
            "description": "Description of the index contents"
        }
    }
}
