{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["id", "cocktails"],
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9]+$",
            "description": "Identifier for the index"
        },
        "cocktails": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^[a-zA-Z0-9]+$"
            },
            "description": "List of available cocktail IDs"
        }
    }
}
